<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/timePicker" />


    <Button
        android:text="Alarm Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnOn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnOff" />

    <Button
        android:text="Alarm On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOn"
        android:layout_above="@+id/tvUpdate"
        android:layout_marginBottom="23dp" />

    <TextView
        android:text="Did you set the alarm"
        android:layout_marginBottom="18dp"
        android:id="@+id/tvUpdate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnOn"
        android:layout_alignEnd="@+id/btnOff"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />



</RelativeLayout>
